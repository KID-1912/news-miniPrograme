
.art-container{
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  padding: 20rpx 0;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}
.art-container > .header{
  display: flex;
  padding-left: 10rpx;
  align-items: center;
  font-size: 26rpx;
}
.art-container .auth-pic{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.art-container .art-title{
  padding-left: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  line-height: 2.5;
}
.art-container .art-banner{
  width: 100%;
  height: 340rpx;
  margin-bottom: 20rpx;
}
.art-container .art-content{
  padding-left: 20rpx;
  color: #666;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.art-container > .footer{
  display:flex;
  margin-top: 20rpx;
  align-items: center;
  color: #ccc;
  font-size: 24rpx;
}
.art-container .icon{
  width: 24rpx;
  height: 24rpx;
  margin: 0 10rpx 0 20rpx;
}